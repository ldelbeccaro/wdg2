@require 'styles'

$darkWhite = darken($white, 45)

.nav
  border-left 1px solid $darkWhite
  display flex
  flex-direction column
  justify-content space-between
  padding 40px
  width 29%
  opacity 1
  position relative
  transition width 0.3s ease-out 0.15s, opacity 0.4s

  &.hidden
    opacity 0
    width 0

  .selected-nav-line
    left -1px
    position absolute
    top 0
    transition height 0.4s linear, background-color 0.4s linear
    width 1px

  .nav-item
    color $darkWhite
    font-size 7.7vh
    font-weight 200
    padding 1.7vh
    transition color 0.4s ease-out, margin-left 0.2s linear

    &:hover
      color white

    &[aria-current='page']
      color white

    &.selected
      margin-left 12px
