.animation
  width 100%

  svg
    height 100px

  .block
    position absolute

    &.live
      transform translate(0, 350px)

  .ice-cream, .cone
    position absolute
    top -150px
    left 350px

  .ice-cream
    .one-left
      top 0
      left -30px
      transition transform 1s linear 1.8s
      z-index 12
    .one-center
      top 4px
      z-index 13
      transition transform 1s linear 1.9s
    .one-right
      top 20px
      left 25px
      z-index 14
      transition transform 1s linear 2s

  .cone
    top -100px

    .six-left
      top 1px
      left -24px
      z-index 9
      transition transform 1s linear 1.4s
    .six-center
      top 8px
      z-index 10
      transition transform 1s linear 1.5s
    .six-right
      top 20px
      left 23px
      z-index 11
      transition transform 1s linear 1.6s

    .five-left
      top 30px
      left -15px
      z-index 6
      transition transform 1s linear 1s
    .five-right
      top 42px
      left 15px
      z-index 7
      transition transform 1s linear 1.1s
    .five-top
      top 21px
      left 25px
      z-index 5
      transition transform 1s linear 0.9s
    .five-bottom
      // top 288px
      top 38px
      left -25px
      z-index 8
      transition transform 1s linear 1.2s

    .four
      top 58px
      z-index 4
      transition transform 1s linear 0.7s

    .three
      top 80px
      z-index 3
      transition transform 1s linear 0.5s


    .two
      top 105px
      z-index 2
      transition transform 1s linear 0.3s

    .one
      top 125px
      transition transform 1s linear 0.1s
      z-index 1
