@require 'styles'

$backgroundColor = #b2e9ff
$shadowColor = darken($backgroundColor, 70)

.questions
  display grid
  grid-auto-rows 8px
  grid-gap 32px
  grid-template-columns repeat(auto-fill, minmax(250px,1fr))
  padding 0 40px 40px 40px

  .question
    background-color white
    cursor default
    filter drop-shadow(0 10px 5px alpha($shadowColor, 0.1))
    padding 24px
    position relative
    transition filter 0.4s ease-in-out  

    .q
      align-items center
      display flex
      margin-bottom 32px
      padding-right 8px
      position relative
      z-index 4

      .icon
        margin 0 12px 8px 0

      .text
        color $black
        font-weight 500
        transition color 0.3s 0.2s ease-in-out

    .answer
      color $darkGray
      font-weight 400
      line-height 1.2em
      position relative
      z-index 3

    .card-border
      background alpha($backgroundColor, 0.5)
      height 72px
      right 16px
      position absolute
      top -8px
      transition top 0.4s ease-in-out, width 0.4s ease-in-out
      width 8px
      z-index 1

    &.hover
      filter drop-shadow(0 8px 8px alpha($shadowColor, 0.2))

      .text
        // color white

      .card-border
        top 0
        width calc(100% - 16px)
