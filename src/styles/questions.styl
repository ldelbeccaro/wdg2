@require 'styles'

.questions
  background white
  background linear-gradient(0deg, rgba(222,224,249,0.7) 0%, rgba(206,227,251,0.7) 43%, rgba(239,255,251,0.8) 75%, rgba(255,255,255,1) 100%)
  display flex
  flex-direction column
  justify-content center
  left 0
  padding 40px 80px
  position absolute
  width calc(100% - 160px)

  +media($extra-small-screen)
    padding 24px
    width calc(100% - 48px)

  .question
    cursor default
    margin 40px auto
    opacity 1
    position relative
    transition filter 0.4s ease-in-out
    width calc(100vw - 160px)
    max-width 1040px

    +media($extra-small-screen)
      width calc(100vw - 48px)

    &:nth-child(1)
      margin-top 80px

      +media($extra-small-screen)
        margin-top 40px

    &:nth-child(even)
      align-items flex-end
      display flex
      flex-direction column
      text-align right

      +media($extra-small-screen)
        align-items flex-start
        text-align left

      .q
        justify-content flex-end

        +media($extra-small-screen)
          justify-content flex-start

    for idx in 0..9
      &:nth-child({idx})
        animation waitToFadeIn (0.3s * idx) linear, fadeInQuestion 1s ease (0.3s * idx)

    .q
      align-items center
      display flex
      font-family Merriweather
      font-size $fontXL
      line-height 1.3
      margin-bottom 32px
      max-width 700px
      padding-right 8px
      position relative
      z-index 4

      +media($extra-small-screen)
        justify-content space-between !important
        width 100%

        .icon
          order 2
          margin-left 12px

      .icon
        height 20px
        margin-right 12px

      .text
        color $black
        font-weight 500
        transition color 0.3s ease-in-out 0.2s

    .answer
      color $darkGray
      font-weight 400
      line-height 1.5em
      max-width 700px
      position relative
      z-index 3

@keyframes waitToFadeIn
  from
    opacity 0
    transform translateY(-16px)
  to
    opacity 0
    transform translateY(-16px)

@keyframes fadeInQuestion
  from
    opacity 0
    transform translateY(-16px)
  to
    opacity 1
    transform translateY(0)
