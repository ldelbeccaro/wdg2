@require 'styles'

.questions
  padding 40px 80px
  background white
  background linear-gradient(0deg, rgba(222,224,249,0.7) 0%, rgba(206,227,251,0.7) 43%, rgba(239,255,251,0.8) 75%, rgba(255,255,255,1) 100%)

  +media($mobile-screen)
    padding 24px

  .question
    cursor default
    margin 160px 0
    opacity 1
    position relative
    transition filter 0.4s ease-in-out
    width calc(100vw - 160px)

    &:nth-child(1)
      margin-top 80px

    &:nth-child(even)
      align-items flex-end
      display flex
      flex-direction column
      text-align right

      .q
        justify-content flex-end

    for idx in 0..9
      &:nth-child({idx})
        animation waitToFadeIn (0.2s * idx) linear, fadeInQuestion 1s ease (0.2s * idx)


    .q
      align-items center
      display flex
      font-family 'Merriweather'
      font-size $fontXL
      margin-bottom 32px
      max-width 700px
      padding-right 8px
      position relative
      z-index 4

      .icon
        height 20px
        margin-right 12px

      .text
        color $black
        font-weight 500
        transition color 0.3s ease-in-out 0.2s

    .answer
      color $darkGray
      font-weight 400
      line-height 1.2em
      max-width 700px
      position relative
      z-index 3

@keyframes waitToFadeIn
  from
    opacity 0
    transform translateY(-16px)
  to
    opacity 0
    transform translateY(-16px)

@keyframes fadeInQuestion
  from
    opacity 0
    transform translateY(-16px)
  to
    opacity 1
    transform translateY(0)
