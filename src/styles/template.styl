@require 'styles'

.template-content
  animation fadeInContent 0.7s linear
  max-width 600px
  padding 40px

  p
    line-height 1.2
    margin 16px 0

  h2
    serifHeader()
    margin-bottom 30px
    text-transform lowercase

  &.photos-template
    max-height calc(100vh - 104px - 80px)
    max-width calc(35vw - 80px)
    overflow-y scroll

  &.questions-template
    padding 0

@keyframes fadeInContent
  from
    opacity 0
  to
    opacity 1

@keyframes waitToFadeInContent
  from
    opacity 0
  to
    opacity 0
