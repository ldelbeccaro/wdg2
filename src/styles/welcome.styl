@require 'styles'

.welcome
  padding 0px 40px 16px

  &.buffer
    padding-top 80px

  .welcome-image
    border-radius 0 0 40% 40%
    height 62vw
    overflow hidden
    position absolute
    right -10%
    top -25%
    width 55vw
    transform rotate(45deg)

    img
      height 122%
      object-fit cover
      position absolute
      top 10%
      transform rotate(-45deg)
      left -80%

  .welcome-blob
    background-color #8ac5cd
    border-radius 40%
    top 35%
    left 45%
    height 30vw
    opacity 0.3
    position absolute
    transform rotate(45deg)
    width 30vw

  .welcome-blob-2
    background-color $gray
    border-radius 40%
    top 55%
    left -10vw
    height 30vw
    opacity 0.2
    position absolute
    transform rotate(40deg)
    width 30vw

  .main-info
    max-width 400px

    h2
      serifHeader()
      line-height 1.3
      margin-bottom 32px
    
    p
      color $darkGray
      font-weight 500
      text-transform uppercase

  .message
    max-width 500px

    p
      line-height 1.2
      margin 12px 0
