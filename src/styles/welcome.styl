@require 'styles'

.welcome
  animation fadeInContent 1s ease-in-out
  overflow auto
  padding 0px 40px 16px

  &.buffer
    padding-top 80px

  .welcome-image
    border-radius 0 0 40% 40%
    height 62vw
    overflow hidden
    position absolute
    right -10%
    top -25%
    width 55vw
    transform rotate(45deg)

    img
      height 122%
      object-fit cover
      position absolute
      top 10%
      transform rotate(-45deg)
      left -80%

  .welcome-blob
    animation welcomeBlob 15s infinite running
    background-color $gray
    border-radius 40%
    top 35%
    left 45%
    height 30vw
    opacity 0.3
    position absolute
    transform rotate(45deg)
    width 30vw
    z-index 1

  .welcome-blob-2
    animation welcomeBlobTwo 15s 2s infinite running
    background-color #7c9067
    border-radius 40%
    top 55%
    left -10vw
    height 30vw
    opacity 0.2
    position absolute
    transform rotate(40deg)
    width 30vw
    z-index 1

  .main-info
    max-width 400px

    h2
      serifHeader()
      line-height 1.3
      margin-bottom 32px
    
    p
      color $darkGray
      font-weight 500
      text-transform uppercase

  .message
    margin-bottom 40px
    max-width 500px
    position relative
    z-index 2

    p
      line-height 1.2
      margin 16px 0

  .button
    serifHeader()
    border 1px solid $gray
    border-radius 4px
    font-size $fontM
    font-weight 700
    letter-spacing: 0.08em
    padding 8px 24px
    position relative
    z-index 2

    &:hover
      border 1px solid $darkGray

@keyframes welcomeBlob
  0%
    transform rotate(45deg)
  20%
    transform translate(-64px, -40px) rotate(15deg)
  40%
    transform translate(-64px, 0) rotate(60deg)
  60%
    transform translate(-8px, 8px) rotate(95deg)
  80%
    transform translate(-40px, 32px) rotate(60deg)
  100%
    transform rotate(45deg)

@keyframes welcomeBlobTwo
  0%
    transform rotate(40deg)
  20%
    transform translate(32px, -8px) rotate(15deg)
  40%
    transform translate(-16px, 32px) rotate(60deg)
  60%
    transform translate(64px, -80px) rotate(-5deg)
  80%
    transform translate(-8px, -32px) rotate(60deg)
  100%
    transform rotate(40deg)
