@require 'styles'
@require 'responsive'

.welcome
  animation fadeInContent 1s ease-in-out
  overflow auto
  padding 40px 40px 16px

  +media($mobile-screen)
    padding 40px 24px 16px

  .main-info
    max-width 350px
    margin-left 100px

    h2
      serifHeader()
      line-height 1.3
      margin-bottom 24px

    p
      color $reallyDarkGray
      font-weight 500
      text-transform uppercase
      margin-bottom 32px

  .links
    display flex
    font-family 'Merriweather'
    margin 40px 0 60px

    .link
      border-bottom 1px solid transparent
      margin-right 20px

  .rsvp-link
    font-family 'Merriweather'

  .button
    serifHeader()
    border 1px solid $gray
    border-radius 4px
    font-size $fontM
    font-weight 700
    letter-spacing: 0.08em
    padding 8px 24px
    position relative
    z-index 2

    +media($mobile-screen)
      font-size $fontM // need to overwrite default serifHeader again

    &:hover
      border 1px solid $darkGray
