@require 'styles'
@require 'responsive'

.welcome
  animation fadeInContent 1s ease-in-out
  overflow auto
  padding 40px 40px 16px

  +media($mobile-screen)
    padding 40px 24px 16px

  .main-info
    max-width 350px
    margin-left 90px

    h2
      serifHeader()
      font-size 36px
      line-height 1.3
      margin-bottom 18px

    p
      color $reallyDarkGray
      font-weight 400
      text-transform uppercase
      margin-bottom 40px

  .links
    display flex
    font-family Merriweather
    margin 40px 0 60px

    .link
      color white
      border-bottom 1px solid transparent
      margin-right 20px

      &:hover
        color rgba(255,255,255,0.5)

  .rsvp-link
    border-bottom 1px solid rgba(255, 255, 255, 0.5)
    color white
    font-family Merriweather
    padding-bottom 6px

  .button
    serifHeader()
    border 1px solid $gray
    border-radius 4px
    font-size $fontM
    font-weight 700
    letter-spacing: 0.08em
    padding 8px 24px
    position relative
    z-index 2

    +media($mobile-screen)
      font-size $fontM // need to overwrite default serifHeader again

    &:hover
      border 1px solid $darkGray
