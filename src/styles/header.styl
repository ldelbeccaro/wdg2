@require 'styles'

header
  align-items center
  display flex
  justify-content space-between
  margin 0 auto
  max-width 1120px // minus padding
  padding 40px
  position relative
  z-index 1000

  h1, #menu
    font-family 'Roboto'
    font-size $fontL
    text-transform uppercase
    font-weight 400

    &:hover
      color $darkGray

  #menu
    color $reallyDarkGray
    cursor pointer
    transition color 0.4s ease-out

    &:hover
      color $darkGray
