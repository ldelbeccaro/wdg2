@require 'styles'

html, body, body > div, body > div > div
  height 100%

html
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  font-family 'Tajawal'
  max-width 100vw
  overflow-x hidden

body
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  color $black
  font-weight 400
  font-size $fontM
  margin 0

a, .link, a.link
  link()

svg
  path
    transition fill 0.1s linear
