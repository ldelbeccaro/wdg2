@require 'styles'

html, body, body > div, body > div > div
  height 100%

html
  font-family 'Tajawal'
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%

body
  margin 0
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-weight 400
  font-size $fontM

a
  link()
