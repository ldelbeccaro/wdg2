@require 'styles'

html, body, body > div#___gatsby, body > div > div
  height 100%

html
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  max-width 100vw
  overflow-x hidden

body
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  margin 0
  regularText()

a, .link, a.link
  link()

svg
  path
    transition fill 0.1s linear
