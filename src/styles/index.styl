@require 'styles'

html, body, body > div, body > div > div
  height 100%

html
  font-family 'Tajawal'
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%

body
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  color $black
  font-weight 400
  font-size $fontM
  margin 0

a
  link()

svg
  path
    transition fill 0.2s linear

.home
  display flex

  .welcome-image
    background-image url('images/welcome-trace.png')
    height calc(100vw / 4.5)
    transition background-image 1s ease-in-out
    background-size 100%
    background-repeat no-repeat
    animation welcomeTransition 5s ease-in-out, welcomePosition 1s ease-in
    opacity 0.4
    overflow hidden
    position relative
    width 100vw

@keyframes welcomePosition {
  0% {
    top: 50px
  }
  50% {
    top: 50px
  }
  100% {
    top: 0
  }
}

@keyframes welcomeTransition {
  0% {
    background-image: url('images/welcome.png')
    opacity: 0
  }
  33% {
    opacity: 0.8
  }
  90% {
    background-image: url('images/welcome-trace.png')
  }
  100% {
    opacity: 0.4
  }
}
