@require 'styles'

.layout
  height 100%

  .blur
    animation blurBackground 3s
    filter blur(3px)
    -webkit-filter blur(3px)
    height 100%
    position fixed
    width 100%
    z-index -1

    .background
      background-size cover
      background-attachment fixed
      height 100%
      width 100%
      opacity 0.5
      position fixed
      transition background 0.3s linear

      &.root
        opacity 1

    .color-background
      height 100%
      width 100%
      position fixed
      transition background 0.5s linear, opacity 0.3s linear

  .content
    display flex
    height calc(100% - 180px)
    justify-content space-between

  footer
    subtext()
    align-items center
    display flex
    flex-direction column
    margin 20px 0

    a
      color $black

      &:hover
        color $darkGray


@keyframes backgroundOpacity {
  0% {
    opacity: 1
  }
  100% {
    opacity: 0.5
  }
}

@keyframes blurBackground {
  0% {
    filter: blur(3px);
    -webkit-filter: blur(3px);
  }
  20% {
    filter: blur(0px);
    -webkit-filter: blur(0px);
  }
  100% {
    filter: blur(3px);
    -webkit-filter: blur(3px);
  }
}
