@require 'styles'

.layout
  height 100%

  .blur
    animation blurBackground 3s
    filter blur(3px)
    -webkit-filter blur(3px)
    height 100%
    max-width 100vw
    position fixed
    width 100%
    z-index -1

    .background
      // animation backgroundOpacity 3s ease-in-out
      background-size 100%
      background-attachment fixed
      height 100%
      width 100%
      opacity 0.5
      position fixed
      transition background-image 0.6s linear

      &.root
        opacity 1

    .color-background
      background #151414
      height 100%
      position fixed
      transition background 0.5s linear, opacity 0.3s linear
      width 100%

  .content
    display flex
    justify-content space-between
    margin 0 auto
    max-width min(100vw, 1200px)

    .main-content
      display flex
      width 100%

  footer
    subtext()
    align-items center
    display flex
    flex-direction column
    margin 20px 0

    a
      color $black

      &:hover
        color $darkGray


@keyframes backgroundOpacity {
  0% {
    opacity: 1
  }
  100% {
    opacity: 0.5
  }
}

@keyframes blurBackground {
  0% {
    filter: blur(3px);
    -webkit-filter: blur(3px);
  }
  20% {
    filter: blur(0px);
    -webkit-filter: blur(0px);
  }
  100% {
    filter: blur(3px);
    -webkit-filter: blur(3px);
  }
}
