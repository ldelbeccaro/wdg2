@require 'styles'

.photos
  display grid
  grid-column-gap 32px
  grid-template-columns 1fr 1fr
  position absolute
  right 24px
  top 0
  width 60vw

  .photos-mask
    background linear-gradient(to bottom, alpha($white, 0.6) 0%, transparent 12%, transparent 88%, alpha($white, 0.4) 100%)
    height 100%
    left 0
    overflow-y scroll
    position absolute
    top 0
    width 100%
    z-index 100

    .scrolling-mask
      width 100%
      height 100%

  .column-container
    animation fadeInContent 1s ease-in 0.5s, waitToFadeInContent 0.5s linear, slideInRight 1s ease-in-out 0.5s, waitToSlideInRight 0.5s linear
    height 100vh
    overflow hidden

    .scrolling-container
      height 100vh
      overflow scroll
      top 0
      width calc(100% + 20px)

    .column
      overflow-x hidden
      top -104px
      width calc(100% - 20px)

      .photo
        margin-bottom 40px
        position relative

        .cover
          background linear-gradient(to top, $white, transparent 100%)
          bottom 0
          display flex
          height 80px
          justify-content center
          position absolute
          width 100%

          .caption
            bottom 20px
            font-family 'Merriweather'
            font-size $fontS
            font-weight 700
            height min-content
            padding 0 16px
            position absolute
            text-align center
            width calc(100% - 40px)

        img
          border-radius 16px
          width 100%

@keyframes slideInRight
  from
    transform translateX(-16px)
  to
    transform translateX(0)

@keyframes waitToSlideInRight
  from
    transform translateX(-16px)
  to
    transform translateX(-16px)
