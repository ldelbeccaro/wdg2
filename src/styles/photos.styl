@require 'styles'

.photos
  display grid
  grid-column-gap 24px
  grid-template-columns 1fr 1fr
  position absolute
  right 24px
  top 0
  width 60vw

  .photos-mask
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 100
    overflow-y scroll

    .scrolling-mask
      width 100%
      height 100%

  .column-container
    height 100vh
    overflow hidden

    .scrolling-container
      height 100vh
      overflow scroll
      top 0
      width calc(100% + 20px)

    .column
      overflow-x hidden
      top -104px
      width calc(100% - 20px)

      .photo
        margin-bottom 24px
        position relative

        .cover
          background linear-gradient(to top, $white, transparent 100%)
          bottom 0
          display flex
          height 80px
          justify-content center
          position absolute
          width 100%

          .caption
            bottom 12px
            font-weight 500
            height min-content
            padding 0 16px
            position absolute
            text-align center
            width calc(100% - 32px)

        img
          border-radius 16px
          width 100%
