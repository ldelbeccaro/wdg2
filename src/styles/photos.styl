@require 'styles'

.photos
  display grid
  grid-column-gap 32px
  grid-template-columns 1fr 1fr
  max-width 800px
  position absolute
  right 24px
  top 0
  width 60vw

  +media($extra-small-screen)
    bottom -16px
    grid-column-gap 24px
    left 0
    position absolute
    right initial
    top initial
    z-index 1

    .photos-mask, .column-container
      display none

  &.show
    +media($extra-small-screen)
      height calc(100vh - 40px)
      top 0
      width 100vw

      .photos-bg
        background: white;
        display block
        height: 100vh;
        position: absolute;
        width: 100vw;
        z-index: -1;

      .photos-mask, .column-container
        display initial

      .column-container
        height calc(100vh - 40px)

      .toggle-photos
        bottom -32px

      .column-container .column .photo
        margin-bottom 20px

        .caption
          display none

  .toggle-photos
    link()
    display none

    +media($extra-small-screen)
      bottom 24px
      display block
      height min-content
      left 24px
      position absolute
      z-index 999

  .photos-bg
    display none

  .photos-mask
    background linear-gradient(to bottom, alpha($white, 0.6) 0%, transparent 12%, transparent 88%, alpha($white, 0.4) 100%)
    height 100%
    left 0
    overflow-y scroll
    position absolute
    top 0
    width 100%
    z-index 100

    .scrolling-mask
      width 100%
      height 100%

  .column-container
    animation fadeInContent 1s ease-in 0.5s, waitToFadeInContent 0.5s linear, slideInRight 1s ease-in-out 0.5s, waitToSlideInRight 0.5s linear
    height 100vh
    overflow hidden

    .scrolling-container
      height 100vh
      overflow scroll
      top 0
      width calc(100% + 20px)

    .column
      overflow-x hidden
      top -104px
      width calc(100% - 20px)

      .photo
        margin-bottom 40px
        position relative

        .cover
          background linear-gradient(to top, $white, transparent 100%)
          bottom 0
          display flex
          height 80px
          justify-content center
          position absolute
          width 100%

          .caption
            bottom 16px
            font-size $fontM
            font-weight 500
            height min-content
            padding 0 16px
            position absolute
            text-align center
            width calc(100% - 40px)

        img
          border-radius 16px
          width 100%

@keyframes slideInRight
  from
    transform translateX(-16px)
  to
    transform translateX(0)

@keyframes waitToSlideInRight
  from
    transform translateX(-16px)
  to
    transform translateX(-16px)
